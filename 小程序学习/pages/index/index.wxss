page{
	background-image: url("http://47.102.212.191/wp-content/uploads/2020/01/avatar-1.jpg");
	background-position: 40%;
	background-size: cover;
}
.container {
  background-repeat: no-repeat;
  background-size: cover;
  height:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.avatar{
	width: 200rpx;
	height: 200rpx;
	margin-top: 100rpx;
	border-radius: 50%;
	box-shadow: 10px 5px 5px #888888;
}
.journey-container{
	border: 1px outset black;
	border-radius: 8px;
	position: relative;
	top: 50px;
	box-shadow: 10px 5px 5px #888888;
	margin-top: 200rpx;
}
	
.journey{
	font-size: 25px;
	font-family: 宋体;
	color: #00ffff;
	font-weight: bold;
}
	
.motto{
	color: #8cfffb;
	position: relative;
	top: 20px;
	font-size: 20px;
	font-family: 楷体;
	font-weight: bold;
}

