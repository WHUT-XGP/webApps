swiper{
	width: 100%;
	height: 600rpx;
}
swiper image{
	width: 100%;
	height: 600rpx;
}
.post-container{
	display: flex;
	flex-direction: column;
	margin: 30rpx;
}
.post-author-date{
	float: left;
	display: flex;
	flex-direction: row;
}
.post-author-date image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	display: block;
}
	
.post-author-date text{
	font-size:50rpx;
	display: block;		
	position: relative;
	left: 100rpx;
	top: 24rpx;
	font-weight: bold;
}
.post-title{
	font-weight: bold;
	font-size: 50rpx;
	text-align: center;
}
.post-content-image{
	width: 100%;
	
}
.post-content{
	font-family: 楷体;
	font-color:%888888;
	line-height: 40rpx;
	letter-spacing: 3rpx;
	font-size: 26rpx;
	letter-spacing: 2rpx;
}
.post-like{
	width: 100%;
	display: flex;
	align-items: center;
}
.post-like image{
	width: 50rpx;
	height:50rpx;
}
.post-like text{
	margin-left: 5rpx;
	display: block;
	color: rgb(128,128,128);
}