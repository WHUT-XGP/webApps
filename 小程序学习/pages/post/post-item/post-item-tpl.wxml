<template name="postTpl">
<view class="post-container">
	<view class="post-author-date">
		<image src="{{avatar}}"/>
		<text>{{date}}</text>
	</view>
	<text class="post-title">{{title}}</text>
	<image class="post-content-image" src="{{postImg}}"  />
	<text class="post-content">
		{{content}}
	</text>
	<view class="post-like">
		<image src="../../image/icon/view.png"/>
		<text>{{readingNum}}</text>
		<image src="../../image/icon/hreat.png"/>
		<text>{{collectionNum}}</text>
		<image src="../../image/icon/mark.png" />
		<text>{{commentNum}}</text>
	</view>
</view>
</template>